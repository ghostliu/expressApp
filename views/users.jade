extends layout

block content
  div.am-cf.am-padding
     div.am-fl.am-cf
        strong.am-text-primary.am-text-lg 首页
        if pageName != ""
             span  / 
             small #{pageName}
  hr
  div.am-g
    div.am-u-sm-12.am-u-md-6
       div.am-btn-toolbar
          div.am-btn-group.am-btn-group-xs
             button(type="button").am-btn.am-btn-default
                 span.am-icon-plus  新增
             button(type="button").am-btn.am-btn-default
                 span.am-icon-save  保存
             button(type="button").am-btn.am-btn-default
                 span.am-icon-archive  审核
             button(type="button").am-btn.am-btn-default
                 span.am-icon-trash-o  删除
    div.am-u-sm-12.am-u-md-3
       div.am-form-group
          select(data-am-selected="{btnSize: 'sm'}")#SearchType
             option(value="option1") 所有类别
             option(value="option2") IT业界
    div.am-u-sm-12.am-u-md-3
       div.am-input-group.am-input-group-sm
          input(type="text")#searchValue.am-form-field
          span.am-input-group-btn
             button(type="button")#searchBtn.am-btn.am-btn-default 搜索
  div.am-g
     div.am-u-sm-12
        form.am-form
           table.am-table.am-table-striped.am-table-hover.table-main
           
           div.am-cf 共 15 条记录 
              div#page1


block scripts
  script(src="/javascripts/user/users.js")