extends layout

block content
  div.am-cf.am-padding
     div.am-fl.am-cf
        strong.am-text-primary.am-text-lg 首页
        if pageName != ""
             span  / 
             small #{pageName}
  hr
  div.am-g
    div.am-u-sm-12.am-u-md-6
       div.am-btn-toolbar
          div.am-btn-group.am-btn-group-xs
             button(type="button").am-btn.am-btn-default
                 span.am-icon-plus  新增
             button(type="button").am-btn.am-btn-default
                 span.am-icon-save  保存
             button(type="button").am-btn.am-btn-default
                 span.am-icon-archive  审核
             button(type="button").am-btn.am-btn-default
                 span.am-icon-trash-o  删除
    div.am-u-sm-12.am-u-md-3
       div.am-form-group
          select(data-am-selected="{btnSize: 'sm'}")#SearchType
             option(value="option1") 所有类别
             option(value="option2") IT业界
    div.am-u-sm-12.am-u-md-3
       div.am-input-group.am-input-group-sm
          input(type="text")#searchValue.am-form-field
          span.am-input-group-btn
             button(type="button")#searchBtn.am-btn.am-btn-default 搜索
  div.am-g
     div.am-u-sm-12
        form.am-form
           table.am-table.am-table-striped.am-table-hover.table-main
              thead
                 tr
                   th.table-check
                      input(type="checkbox")
                   th.table-id ID
                   th.table-loginname 登录名
                   th.table-username 用户名
                   th.table-sex 性别
                   th.table-email 邮件地址
                   th.table-mobile 手机号
                   th.table-issuper 是否为管理员
                   th.table-weixin 微信号
                   th.table-createtime 创建时间
                   th.table-note 备注
               tbody
                 each user,i in users 
                    tr
                       td 
                          input(type="checkbox")
                       td #{i+1}
                       td #{user.LoginName}
                       td #{user.UserName}
                       if user.Sex == 0
                         td 女
                       else 
                         td 男
                       td #{user.Email}
                       td #{user.MobilePhone}
                       if user.IsSuper == true
                          td 是
                       else
                          td 否
                       td #{user.WeiXinId}
                       td #{user.CreateDtm}
                       td #{user.FNote}
           div.am-cf 共 15 条记录 
              div#page1


block scripts
  script(src="/javascripts/user/users.js")